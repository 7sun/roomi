<!DOCTYPE html>
<html>
<head>
  <title>Roomi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller] %>">
	<header class="navigation" role="banner">
	  <div class="navigation-wrapper">
	  	<% if current_user %>
	    	<%= link_to image_tag("http://i.imgur.com/JbwZ7q6.png"), home_path, {class: "logo"} %>
		    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
		    <nav role="navigation">
		      <ul id="js-navigation-menu" class="navigation-menu show">
		        <li class="nav-link"><%= link_to "Add Expense", new_expense_path %></li>
		        <li class="nav-link"><a href="javascript:void(0)">Make Payment</a></li>
		      </ul>
		    </nav>
		    <div class="navigation-tools">
						<%= link_to ' Logout', logout_path, {class: "header-links log-out"} %>
						<strong class= "header-links log-out"><%= "#{current_user.email} |" %></strong>
				</div>
	    <% else %>
	    	<%= link_to image_tag("http://i.imgur.com/JbwZ7q6.png"), root_path, {class: "logo"} %>
		    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
		    <div class="navigation-tools">
		    	<%= link_to 'Log In', login_path, {class: "log-in header-links"} %>
		    	<%= link_to 'Sign Up', signup_path, {class: "sign-up header-links"} %>
		    </div>
	   	<% end %>
	  </div>
	</header>
	
		<%= yield %>

