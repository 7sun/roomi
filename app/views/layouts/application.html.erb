<!DOCTYPE html>
<html>
<head>
  <title>Roomi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller] %>">
	<div class="header">
		<% if current_user %>
			<div class="account-links">
				<strong><%= current_user.email %></strong> | <%= link_to 'Logout', logout_path %>
			</div>
			<h1><%= link_to 'Roomi', home_path %></h1>
		<% else %>
			<div class="account-links">
				<strong><%= link_to 'Sign Up', signup_path %></strong> | <%= link_to 'Login', login_path %>
			</div>
			<h1><%= link_to 'Roomi', root_path %></h1> 
		<% end %>
	</div>

<%= yield %>

</body>
</html>
