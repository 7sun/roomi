<%= form_for @expense do |e| %>
	<p><%= e.select :expense_type, options_for_select(["cable bill", "internet bill", "electric bill", "gas bill", "water bill", "cleaning service", "cleaning supplies", "food/beverage", "propane tank", "home improvement", "other"]) %></p>
	<p><%= e.text_field :amount, placeholder: :amount %></p>
	<p><%= e.date_field :date, placeholder: :date %></p>
	<p><%= e.text_field :description, placeholder: :description %></p>
	<p><%= e.hidden_field :owner, value:current_user.id %></p>
	<p><%= e.hidden_field :owner_name, value:current_user.name %></p>
	<%= e.submit %>
<% end %>
