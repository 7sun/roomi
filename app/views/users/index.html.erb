<% if current_user.group_member %>
	<% @group.each do |g| %>
    <h2>Home</h2>
		<h3><%= g.name %></h3>
		<p><%= g.address %></p>
    <p><%= g.home_type %></p>
    Members <%= link_to 'Invite more', edit_group_path(@group.name) %><ul>
    <% g.member_emails.each do |m| %>
      <li><%= m %></li>
      <% end %>
    </ul>
    <% if current_user.id.to_s == g.owner_id.to_s %>
      <%= link_to 'Delete Group', 'groups#destroy' %>
    <% else %>
      <%= link_to 'Leave Group' %>
    <% end %>
  <% end %>
<% else %>
  <% if @group.exists? %>
    <% @group.each do |g| %>
    <p><%= "You have been invited to join the #{g.name} group!"%></p>
    <% end %>
    <p><%= link_to 'Join now', join_path %></p>
  <% else %>
    <p><%= link_to 'Create a Group', new_group_path %></p>
  <% end %>
<% end %>